<UserControl x:Class="Octide.Views.DocumentItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Octide"
             xmlns:controls="clr-namespace:Octide.Controls"
             mc:Ignorable="d" 
             xmlns:params="http://schemas.codeplex.com/elysium/params"
             params:Design.Theme="Dark"
             d:DesignHeight="900" d:DesignWidth="600">

    <ItemsControl >
        <controls:PropertyFieldControl Header="Name" >
            <TextBox Text="{Binding Name, Mode=TwoWay}"/>
        </controls:PropertyFieldControl>

        <controls:PropertyFieldControl Header="File Asset" >
            <controls:AssetControllerView DataContext="{Binding DocumentAsset}" />
        </controls:PropertyFieldControl>

        <controls:PropertyFieldControl Header="Icon Image" >
            <controls:AssetControllerView DataContext="{Binding IconAsset}" />
        </controls:PropertyFieldControl>
    </ItemsControl>
</UserControl>
